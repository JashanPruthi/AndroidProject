<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <Button
        android:id="@+id/nasa"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/nasaImageofDay"
        android:text="@string/nasa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nasaImageofDay"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:text="@string/nasaImageofDay" />


    <Button
        android:id="@+id/goToBBCnewsReader"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/nasaImageofDay"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:text="@string/GotoBBCnewsReader" />

    <Button
        android:id="@+id/guardianMain"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/goToBBCnewsReader"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:text="@string/the_guardian_news" />
</RelativeLayout>